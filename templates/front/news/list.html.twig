{% extends 'front/base.html.twig' %}

{% block title %}Lista artykułów "Z kraju i ze świata"{% endblock %}

{% block body %}
    {% if newsCategoryEnumCases is defined and newsCategoryEnumCases %}
        <section id="submenu" class="submenu py-3 bg-light border-bottom">
            <div class="container">
                <h2 class="h5 mb-3">Kategorie</h2>
                <nav>
                    <ul class="nav nav-pills gap-2">
                        {% for category in newsCategoryEnumCases %}
                            <li class="nav-item">
                                <a class="nav-link {% if category.value == _routeParams.enumSlug %}active{% endif %}"
                                   href="{{ path('app_page_news', { enumSlug: category.value }) }}">
                                    {{ category.name }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </nav>
            </div>
        </section>
    {% endif %}
    
    <section id="articles" class="articles py-5">
        <div class="container">
            <h1 class="mb-4">Artykuły</h1>

            <div class="row g-4">
                {% for item in newsElementList.items %}
                    <div class="col-md-6 col-lg-4">
                        <article class="card h-100 shadow-sm border-0">
                            <div class="card-body d-flex flex-column">
                                <h2 class="card-title h5">{{ item.name }}</h2>
                                <p class="card-text text-muted flex-grow-1">{{ item.description }}</p>
                                <a href="{{ path('app_page_news_entry', { enumSlug: item.enumSlug.value, id: item.id, entry: item.name|slugify }) }}"
                                   class="btn btn-outline-primary mt-3 align-self-start">
                                    Czytaj więcej
                                </a>
                            </div>
                        </article>
                    </div>
                {% else %}
                    <div class="col-12">
                        <p class="text-center text-muted">Brak artykułów do wyświetlenia.</p>
                    </div>
                {% endfor %}
            </div>

            {% if newsElementList.total > 1 %}
                <nav aria-label="Stronicowanie" class="mt-4">
                    <ul class="pagination justify-content-center">
                        {% if _routeParams.page > 1 %}
                            <li class="page-item">
                                <a class="page-link"
                                   href="{{ path('app_page_news', {enumSlug: _routeParams.enumSlug, page: _routeParams.page - 1}) }}">
                                    « Poprzednia
                                </a>
                            </li>
                        {% endif %}

                        <li class="page-item disabled">
                            <span class="page-link">
                                Strona {{ _routeParams.page }} z {{ newsElementList.total }}
                            </span>
                        </li>

                        {% if _routeParams.page < newsElementList.total %}
                            <li class="page-item">
                                <a class="page-link"
                                   href="{{ path('app_page_news', {enumSlug: _routeParams.enumSlug, page: _routeParams.page + 1}) }}">
                                    Następna »
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            {% endif %}
        </div>
    </section>
    
    <section class="py-4 bg-light">
        <div class="container">
            {{ parent() }}
        </div>
    </section>
{% endblock %}