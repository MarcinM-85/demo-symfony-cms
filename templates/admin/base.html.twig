<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <meta name="robots" content="noindex,nofollow">
        <link rel="icon" href="/_gfx/ico/favicon.png">

        <title>{% block title %}CMS - Panel Administracyjny{% endblock %}</title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        {{ encore_entry_link_tags('admin') }}

        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        {% if is_granted('ROLE_ADMIN') %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Panel</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarMain">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_news_list') }}">News</a>
                            </li>
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_user_list') }}">User</a>
                            </li>
                            {% endif %}
                            {# Dodaj kolejne pozycje nawigacyjne tutaj #}
                        </ul>
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_auth_logout') }}">Wyloguj</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% endif %}

        <div class="container mt-4">
            {% if app.session.flashbag.peek('success')|length > 0 %}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zamknij"></button>
                    </div>
                {% endfor %}
            {% endif %}

            {% block body %}
            {% endblock %}
        </div>

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
            
            {% if is_granted('ROLE_ADMIN') %}
                {{ encore_entry_script_tags('admin') }}
            {% endif %}
            
            {# block importmap %}{{ importmap('app') }}{% endblock #}
        {% endblock %}
    </body>
</html>
