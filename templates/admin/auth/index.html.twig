{% extends 'admin/base.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center mb-4">Logowanie</h2>

                {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Wystąpił błąd:</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zamknij"></button>
                    </div>
                {% endif %}

                <form action="{{ path('admin_auth') }}" method="post">
                    <div class="mb-3">
                        <label for="username" class="form-label">Login:</label>
                        <input type="username" id="username" name="_username" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Hasło:</label>
                        <input type="password" id="password" name="_password" class="form-control" required>
                    </div>

                    {# Jeśli chcesz kontrolować URL, na który użytkownik zostanie przekierowany po zalogowaniu,
                    <input type="hidden" name="_target_path" value="/account"> 
                    #}

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Zaloguj się</button>
                    </div>
                </form>
                {#
                <div class="mt-3 text-center">
                    <a href="{{ path('admin_password_reset') }}">Nie pamiętasz hasła?</a>
                </div>
                #}
            </div>
        </div>
    </div>
{% endblock %}