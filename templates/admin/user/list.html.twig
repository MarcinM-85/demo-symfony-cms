{% extends 'admin/base.html.twig' %}

{% block title %}Użytkownicy{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">Lista użytkowników</h1>
            <a href="{{ path('admin_user_add') }}" class="btn btn-success">Dodaj nowego</a>
        </div>

        {% if elementList is defined and elementList.items %}
            <ul class="list-group" data-element-list>
                {% for item in elementList.items %}
                    <li class="list-group-item d-flex justify-content-between align-items-center mb-1">
                        <div>
                            <strong>{{ item.username }}</strong> ({{ item.email }})
                        </div>
                        <div class="btn-group btn-group-sm" role="group">
                            <a href="{{ path('admin_user_edit', {'id': item.id}) }}" class="btn btn-outline-primary">Edytuj</a>
                            <button 
                                class="btn btn-outline-danger"
                                data-action-delete
                                data-href="{{ path('admin_user_delete', {'id': item.id}) }}"
                                data-redirect="{{ path('admin_user_list') }}">
                                Usuń
                            </button>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <div class="alert alert-info">Brak elementów</div>
        {% endif %}
    </div>
{% endblock %}