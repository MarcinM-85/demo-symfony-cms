{% extends 'admin/base.html.twig' %}

{% block title %}Edytuj użytkownika{% endblock %}

{% block body %}
    <h1>{{ 'Edycja' }}</h1>
    <a href="{{ path('admin_user_list') }}">Powrót</a>

    {{ form_start(form) }}
        {{ form_errors(form) }}

        {% for field in form %}
            <div class="form-group">
                {{ form_label(field) }}
                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(field) }}
            </div>
        {% endfor %}

        <button class="btn btn-primary">
            {{ 'Zapisz' }}
        </button>
    {{ form_end(form) }}
{% endblock %}